<?xml version="1.0" encoding="UTF-8"?>

<project name="BuildPipeline-CommitStage" basedir="." default="Packaging">

	<!-- Checkout will be done by CI-Server -->

	<!-- Configuration Section -->
	<property environment="env" />
	<property name="buildversion" value="1.0.0.0-snapshot" />

	<!-- Task Sections Commit Stage -->
	<target name="Init">
		<echo message="Initializing" />
	</target>

	<target name="Compile" depends="Init">
		<echo message="Compile" />
	</target>

	<target name="xUnitTests" depends="Compile">
		<echo message="xUnit testing" />
	</target>

	<target name="Analysis" depends="xUnitTests">
		<echo message="Analysis" />
	</target>

	<target name="Packaging" depends="Analysis">
		<echo message="Packaging" />
	</target>

	<!-- Task Section Acceptance Stage -->
	<target name="Configure-Environment" depends="">
		<echo message="Configure environmen"/>
	</target>

	<target name="Deploy-Binaries" depends="Configure-Environment">
		<echo message="Deploy Binaries" />
	</target>

	<target name="Smoke-Tests" depends="Deploy-Binaries">
		<echo message="Smoke tests" />
	</target>

	<target name="Acceptance-Tests" depends="Smoke-Tests">
		<echo message="Acceptance testing" />
	</target>

</project>
